<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.warrior.user.dao.UserDao" >

    <resultMap id="user" type="com.warrior.user.entity.User">
        <id column="id" property="uid" jdbcType="INTEGER" />
        <result column="userName" property="userName" jdbcType="VARCHAR"/>
        <result column="passWord" property="passWord" jdbcType="VARCHAR"/>
        <result column="salt" property="salt" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getUserList" parameterType="Map" resultType="com.warrior.user.entity.User">
        SELECT * FROM warrior.warrior_user WHERE 1=1
        <if test="userName != null">
            AND locate(#{userName},userName) > 0
        </if>
        <if test="userType != null">
            AND userType = #{userType}
        </if>
        <if test="status != null">
            AND status = #{status}
        </if>
        <if test="startTime != null">
            AND timestamp(createTime) &gt;= timestamp(#{startTime})
        </if>
        <if test="endTime != null">
            AND timestamp(createTime) &lt;= timestamp(#{endTime})
        </if>
    </select>

    <select id="getByUserName" parameterType="java.lang.String" resultType="com.warrior.user.entity.User">
        SELECT * FROM warrior.warrior_user WHERE userName = #{userName}
    </select>
</mapper>